function! PhpOverride()
  hi! def link phpDocTags  phpDefine
  hi! def link phpDocParam phpType
  setlocal shiftwidth=4
endfunction

augroup phpOverride
  autocmd!
  autocmd FileType php call PhpOverride()
augroup END
